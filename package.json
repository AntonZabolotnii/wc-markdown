{
  "name": "@vanillawc/wc-markdown",
  "version": "1.3.10",
  "license": "MIT",
  "author": "Evan Plaice <evanplaice@gmail.com> (http://evanplaice.com/)",
  "description": "A vanilla Markdown web component with optional syntax highlighting",
  "keywords": [
    "web-components",
    "vanilla",
    "markdown",
    "syntax-highlighting"
  ],
  "repository": "https://github.com/vanillawc/wc-markdown/",
  "main": "src/wc-markdown.js",
  "module": "dist/wc-markdown.js",
  "scripts": {
    "start": "npx live-server --open=dev",
    "lint": "semistandard",
    "build": "npx rimraf ./dist && npm run build:src && npm run build:assets",
    "build:src": "npx rollup --config .config/rollup.config.js ",
    "build:assets": "cp -r ./node_modules/prism-es6/themes ./dist/themes && cp -r ./node_modules/prism-es6/components ./dist/components",
    "package": "npx rimraf package && npm pack | tail -n 1 | xargs tar -xf",
    "preversion": "npm run lint",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "marked": "^0.7.0",
    "prism-es6": "^1.2.0",
    "semistandard": "^14.2.0"
  },
  "semistandard": {
    "ignore": [
      "dist/components/*"
    ]
  }
}
